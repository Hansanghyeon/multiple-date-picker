{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "jsx": "preserve",
    "checkJs": true,
    "baseUrl": "./src/",
    "paths": {
      "@atom/*": [
        "./components/atoms/*"
      ],
      "@molecule/*": [
        "./components/molecules/*"
      ],
      "@organism/*": [
        "./components/organisms/*"
      ],
      "@template/*": [
        "./components/templates/*"
      ],
      "@style/*": [
        "./styles/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}